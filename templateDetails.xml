<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.0" type="template" client="site">
  <name>pislice</name>
  <version>1.0</version>
  <creationDate>11/28/2012</creationDate>
  <author>Justin Renaud</author>
  <authorEmail>tghidsgn@gmail.com</authorEmail>
  <copyright>Copyright (C) 2013</copyright>
  <description>TPL_PISLICE_XML_DESCRIPTION</description>
  <files>
    <filename>component.php</filename>
    <filename>favicon.ico</filename>
    <filename>index.php</filename>
    <filename>templateDetails.xml</filename>
    <filename>template_preview.png</filename>
    <filename>template_thumbnail.png</filename>
    <folder>config</folder>
    <folder>css</folder>
    <folder>font</folder>
    <folder>html</folder>
    <folder>img</folder>
    <folder>js</folder>
    <folder>language</folder>
  </files>
  <positions>
    <position>debug</position>
    <position>header</position>
    <position>navigation</position>
    <position>search</position>
    <position>body</position>
    <position>sidebar-left</position>
    <position>article-top</position>
    <position>article-top2</position>
    <position>article</position>
    <position>article-bottom</position>
    <position>article-bottom2</position>
    <position>sidebar-right</position>
    <position>footer-left</position>
    <position>footer-middle</position>
    <position>footer-right</position>
  </positions>
  <languages folder="language">
    <language tag="en-GB">en-GB/en-GB.tpl_pislice.ini</language>
    <language tag="en-GB">en-GB/en-GB.tpl_pislice.sys.ini</language>
  </languages>
  <config>
    <fields name="params">
      <fieldset name="FONTS">
      <field name="titleFont" class="" type="text" default="Droid+Serif:400,400italic,700"
					label="TPL_PISLICE_FONT_TITLE_LABEL"
					description="TPL_PISLICE_FONT_TITLE_DESC" />
      <field name="bodyFont" class="" type="text" default="Open+Sans:300italic,700,300"
					label="TPL_PISLICE_FONT_BODY_LABEL"
					description="TPL_PISLICE_FONT_BODY_DESC" />
      <field name="navFont" class="" type="text" default="Fjalla+One"
					label="TPL_PISLICE_FONT_NAV_LABEL"
					description="TPL_PISLICE_FONT_NAV_DESC" />
      </fieldset>
      <fieldset name="COLOURS">
      <field name="linkColour" class="" type="color" default="#ff6f05"
					label="TPL_PISLICE_LINK_COLOUR_LABEL"
					description="TPL_PISLICE_LINK_COLOUR_DESC" />
      <field name="linkHover" class="" type="text" default="text-decoration:none"
					label="TPL_PISLICE_LINK_HOVER_LABEL"
					description="TPL_PISLICE_LINK_HOVER_DESC" />
      <field name="complementColour" class="" type="color" default="#7dd3f7"
					label="TPL_PISLICE_COMPLEMENT_COLOUR_LABEL"
					description="TPL_PISLICE_COMPLEMENT_COLOUR_DESC" />
      <field name="detailIconsColour" class="" type="color" default="#F0F1F3"
					label="TPL_PISLICE_DETAIL_ICON_COLOUR_LABEL"
					description="TPL_PISLICE_DETAIL_ICON_COLOUR_DESC" />
      </fieldset>
      <fieldset name="LAYOUT">
      <field name="logo" 
	  		 		type="media" 
			 		default="" 
			 		label="TPL_PISLICE_SITE_LOGO_LABEL"
					description="TPL_PISLICE_SITE_LOGO_DESC" />
      <field name="navbarfixed" 
					type="radio"
					class="btn-group"
					default="1"
					label="TPL_PISLICE_NAVBAR_POSITION_LABEL"
					description="TPL_PISLICE_NAVBAR_POSITION_DESC">
        <option value="1">JYES</option>
        <option value="0">JNO</option>
      </field>
      <field name="detailIcons" 
					type="radio"
					class="btn-group"
					default="1"
					label="TPL_PISLICE_ARTICLE_DETAIL_ICONS_LABEL"
					description="TPL_PISLICE_ARTICLE_DETAIL_ICONS_DESC">
        <option value="1">JYES</option>
        <option value="0">JNO</option>
      </field>
      <field name="pagenumbers" 
					type="radio"
					class="btn-group"
					default="0"
					label="TPL_PISLICE_ARTICLE_PAGENUMBERS_LABEL"
					description="TPL_PISLICE_ARTICLE_PAGENUMBERS_DESC">
        <option value="1">JYES</option>
        <option value="0">JNO</option>
      </field>
      </fieldset>
      <fieldset name="OPENGRAPH">
      <field name="This feature is very beta ;)" type="spacer" class="invalid"></field>
      <field name="opengraph" 
					type="radio"
					class="btn-group"
					default="0"
					label="TPL_PISLICE_ALLOW_OPENGRAPH_LABEL"
					description="TPL_PISLICE_ALLOW_OPENGRAPH_DESC">
        <option value="1">JYES</option>
        <option value="0">JNO</option>
      </field>
      </fieldset>
      <fieldset name="MISC">
      <field name="animations" 
					type="radio"
					class="btn-group"
					default="1"
					label="TPL_PISLICE_CSS_ANIMATIONS_LABEL"
					description="TPL_PISLICE_CSS_ANIMATIONS_DESC">
        <option value="1">JYES</option>
        <option value="0">JNO</option>
      </field>
      <field name="generator" 
					type="radio"
					class="btn-group"
					default="1"
					label="TPL_PISLICE_FIELD_GENERATOR_LABEL"
					description="TPL_PISLICE_FIELD_GENERATOR_DESC">
        <option value="1">JYES</option>
        <option value="0">JNO</option>
      </field>
      </fieldset>
    </fields>
  </config>
</extension>
