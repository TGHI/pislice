<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.0" type="template" client="site">
	<name>pislice</name>
	<version>1.0</version>
	<creationDate>11/28/2012</creationDate>
	<author>Justin Renaud</author>
	<authorEmail>tghidsgn@gmail.com</authorEmail>
	<copyright>Copyright (C) 2013</copyright>
	<description>TPL_PISLICE_XML_DESCRIPTION</description>
	<files>
		<filename>component.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<folder>config</folder>
		<folder>css</folder>
		<folder>font</folder>
		<folder>html</folder>
		<folder>img</folder>
		<folder>js</folder>
		<folder>language</folder>
	</files>
	<positions>
		<position>debug</position>
		<position>header</position>
		<position>navigation</position>
		<position>search</position>
		<position>body</position>
		<position>sidebar-left</position>
		<position>article-top</position>
		<position>article-top2</position>
		<position>article</position>
		<position>article-bottom</position>
		<position>article-bottom2</position>
		<position>sidebar-right</position>
		<position>footer</position>
	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_pislice.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="themeSettings" addfieldpath="/templates/pislice/admin/elements" label="COM_TEMPLATES_THEMES_FIELDSET_LABEL">
				<field name="config_manager" type="configmanager" directory="templates/pislice/config/" />
				<field name="asset_js" type="asset" extension="js" path="templates/pislice/admin/scripts.js" />
			</fieldset>
			<fieldset name="FONTS">
				<field name="MAIN_FONT" class="" type="text" default="Open+Sans:300italic,300,400,600,700,800" label="TPL_PISLICE_FONT_BODY_LABEL" description="TPL_PISLICE_FONT_BODY_DESC" />
				<field name="SUB_FONT" class="" type="text" default="Fjalla+One" label="TPL_PISLICE_FONT_NAV_LABEL" description="TPL_PISLICE_FONT_NAV_DESC" />
			</fieldset>
			<fieldset name="COLOURS">
				<field name="BODY_BACKGROUND_COLOUR" type="color" default="#fbfbfb" label="TPL_PISLICE_BODY_BACKGROUND_COLOUR_LABEL" description="TPL_PISLICE_BODY_BACKGROUND_COLOUR_DESC" />
				<field name="BODY_FONT_COLOUR" type="color" default="#424347" label="TPL_PISLICE_BODY_FONT_COLOUR_LABEL" description="TPL_PISLICE_BODY_FONT_COLOUR_DESC" />
				<field name="NAVBAR_BACKGROUND_COLOUR" type="color" default="#F3F4F6" label="TPL_PISLICE_NAVBAR_BACKGROUND_COLOUR_LABEL" description="TPL_PISLICE_NAVBAR_BACKGROUND_COLOUR_DESC" />
				<field name="NAVBAR_LINK_COLOUR" type="color" default="#ff6f05" label="TPL_PISLICE_NAVBAR_LINK_COLOUR_LABEL" description="TPL_PISLICE_NAVBAR_LINK_COLOUR_DESC" />
				<field name="LINK_COLOUR" type="color" default="#ff6f05" label="TPL_PISLICE_LINK_COLOUR_LABEL" description="TPL_PISLICE_LINK_COLOUR_DESC" />
				<field name="LINK_HOVER" type="text" default="text-decoration:none" label="TPL_PISLICE_LINK_HOVER_LABEL" description="TPL_PISLICE_LINK_HOVER_DESC" />
				<field name="COMPLEMENT_COLOUR" type="color" default="#7dd3f7" label="TPL_PISLICE_COMPLEMENT_COLOUR_LABEL" description="TPL_PISLICE_COMPLEMENT_COLOUR_DESC" />
				<field name="COMPONENT_BACKGROUND_COLOUR" type="color" default="#fff" label="TPL_PISLICE_COMPONENT_BACKGROUND_COLOUR_LABEL" description="TPL_PISLICE_COMPONENT_BACKGROUND_COLOUR_DESC" />
				<field name="ARTICLE_TITLE_COLOUR" type="color" default="#424347" label="TPL_PISLICE_ARTICLE_TITLE_COLOUR_LABEL" description="TPL_PISLICE_ARTICLE_TITLE_COLOUR_DESC" />
				<field name="ICON_COLOUR" type="color" default="#999" label="TPL_PISLICE_DETAIL_ICON_COLOUR_LABEL" description="TPL_PISLICE_DETAIL_ICON_COLOUR_DESC" />
				<field name="3D_LIGHT_COLOUR" type="color" default="#F3F4F6" label="TPL_PISLICE_3D_LIGHT_COLOUR_LABEL" description="TPL_PISLICE_3D_LIGHT_COLOUR_DESC" />
				<field name="3D_LIGHT_ICON_COLOUR" type="color" default="#999" label="TPL_PISLICE_3D_LIGHT_ICON_COLOUR_LABEL" description="TPL_PISLICE_3D_LIGHT_ICON_COLOUR_DESC" />
				<field name="3D_LIGHT_FONT_COLOUR" type="color" default="#ff6f05" label="TPL_PISLICE_3D_LIGHT_FONT_COLOUR_LABEL" description="TPL_PISLICE_3D_LIGHT_FONT_COLOUR_DESC" />
				<field name="3D_LIGHT_HIGHLIGHT_OPACITY" type="number" default="0.9" label="TPL_PISLICE_3D_LIGHT_HIGHLIGHT_OPACITY_LABEL" description="TPL_PISLICE_3D_LIGHT_HIGHLIGHT_OPACITY_DESC" />
				<field name="3D_LIGHT_LOWLIGHT_OPACITY" type="number" default="0.1" label="TPL_PISLICE_3D_LIGHT_LOWLIGHT_OPACITY_LABEL" description="TPL_PISLICE_3D_LIGHT_LOWLIGHT_OPACITY_DESC" />
			</fieldset>
			<fieldset name="LAYOUT">
				<field name="LOGO" type="media" default="" label="TPL_PISLICE_SITE_LOGO_LABEL" description="TPL_PISLICE_SITE_LOGO_DESC" />
				<field name="NAVBAR_POSITION" type="radio" class="btn-group" default="1" label="TPL_PISLICE_NAVBAR_POSITION_LABEL" description="TPL_PISLICE_NAVBAR_POSITION_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="ICONS" type="radio" class="btn-group" default="1" label="TPL_PISLICE_ARTICLE_DETAIL_ICONS_LABEL" description="TPL_PISLICE_ARTICLE_DETAIL_ICONS_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="ARTICLE_PAGE_NUMBERS" type="radio" class="btn-group" default="0" label="TPL_PISLICE_ARTICLE_PAGENUMBERS_LABEL" description="TPL_PISLICE_ARTICLE_PAGENUMBERS_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>
			<fieldset name="OPENGRAPH">
				<field name="This feature is BETA and works ONLY for com_content (Blog/Category, Article views)." type="spacer" class="invalid" />
				<field name="OPENGRAPH_META_TAGS" type="radio" class="btn-group" default="0" label="TPL_PISLICE_ALLOW_OPENGRAPH_LABEL" description="TPL_PISLICE_ALLOW_OPENGRAPH_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="FACEBOOK_APP_ID" type="text" class="btn-group" default="000000000000" label="TPL_PISLICE_FACEBOOK_APP_ID_LABEL" description="TPL_PISLICE_FACEBOOK_APP_ID_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>
			<fieldset name="MISC">
				<field name="CSS3_ANIMATIONS" type="radio" class="btn-group" default="1" label="TPL_PISLICE_CSS_ANIMATIONS_LABEL" description="TPL_PISLICE_CSS_ANIMATIONS_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="META_GENERATOR" type="radio" class="btn-group" default="1" label="TPL_PISLICE_FIELD_GENERATOR_LABEL" description="TPL_PISLICE_FIELD_GENERATOR_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>